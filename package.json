{
  "name": "discord-app-bot",
  "version": "0.2.0",
  "type": "module",
  "description": "A Discord bot for automating the handling of Google Forms pushed to a server.",
  "repository": "github:adamhl8/discord-app-bot",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "docker:push": "pnpm build && docker build . -t ghcr.io/adamhl8/discord-app-bot && docker push ghcr.io/adamhl8/discord-app-bot:latest",
    "format": "prettier --write .",
    "lint": "eslint ./src/",
    "start": "tsx watch --trace-warnings ./src/index.ts"
  },
  "dependencies": {
    "@sindresorhus/slugify": "^2.2.1",
    "discord-bot-shared": "^0.10.0",
    "discord.js": "^14.13.0",
    "fs-extra": "^11.1.1",
    "get-urls": "^12.1.0",
    "node-json-db": "^2.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.1",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-sonarjs": "^0.20.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "prettier": "^3.0.2",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-pkg": "^0.18.0",
    "prettier-plugin-sh": "^0.13.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  }
}
